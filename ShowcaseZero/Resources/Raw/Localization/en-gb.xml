<?xml version="1.0" encoding="utf-8" ?>
<LocalizationPack Language="en-gb" FriendlyName="English">
	<Record Id="E_Hello">
		<Item Condition="true" Text="Hello"/>
	</Record>

	<Record Id="E_MessageCount">
		<Item Condition="NumMessages == 0" Text="You're all up to date"/>
		<Item Condition="NumMessages == 1" Text="You have a message"/>
		<Item Condition="NumMessages LTE MaxMessages" Text="You have {NumMessages} messages"/>
		<Item Condition="PaidSubscription == true OR IsTrialActive == true" Text="You have {NumMessages} messages"/>
		<Item Condition="NumMessages == 5" Text="There are {NumMessages} and 1 hidden message; upgrade to see the hidden message"/>
		<Item Condition="true" Text="There are {NumMessages} and {NumMessages-5} hidden messages; upgrade to see the hidden messages"/>
	</Record>

</LocalizationPack>