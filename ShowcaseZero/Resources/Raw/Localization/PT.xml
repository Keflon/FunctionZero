<?xml version="1.0" encoding="utf-8" ?>
<LocalizationPack Language="pt-pt" LocalizedName="English">

	<Record Id="_E_CountryCode">
		<Item Condition="true" Text="PT"/>
	</Record>

	<Record Id="_E_FlagAssetName">
		<Item Condition="true" Text="pt.png"/>
	</Record>

	<Record Id="E_Hello">
		<Item Condition="True" Text="Olá"/>
	</Record>

	<Record Id="E_NumberOfCats">
		<Item Condition="True" Text="Montante dos gatos:"/>
	</Record>

	<Record Id="E_NumberOfDogs">
		<Item Condition="True" Text="Montante dos cães:"/>
	</Record>

	<Record Id="E_Cats" Parameters="NumCats">
		<Item Condition="NumCats == 0" Text="Não há gatos"/>
		<Item Condition="NumCats == 1" Text="Tens um gato"/>
		<Item Condition="NumCats == 5" Text="Tens CINCO gatos"/>
		<Item Condition="true" Text="Há {NumCats} gatos"/>
	</Record>

	<Record Id="E_Dogs" Parameters="NumDogs">
		<Item Condition="NumDogs == 0" Text="Não há cães"/>
		<Item Condition="NumDogs == 1" Text="Tens um cão"/>
		<Item Condition="NumDogs == 5" Text="Tens CINCO cães"/>
		<Item Condition="true" Text="Há {NumDogs} cães"/>
	</Record>

	<Record Id="E_CatsAndDogs" Parameters="NumCats, NumDogs">
		<Item Condition="NumCats == 0 AND NumDogs==0" Text="Não é nenhum gatos nem cães"/>
		<Item Condition="NumCats == 0 AND NumDogs==1" Text="Tens um cão sozinho"/>
		<Item Condition="NumCats == 1 AND NumDogs==0" Text="Tens um gato sozinho"/>

		<Item Condition="NumCats == 1 AND NumDogs==1" Text="Tens um gato e um cão"/>

		<Item Condition="NumDogs==1 AND NumCats==2" Text="Tens um cão e dobrar o montante dos gatos"/>
		<Item Condition="NumCats==1 AND NumDogs==2" Text="Tens um gato e dobrar o montante dos cães"/>

		<Item Condition="NumCats == NumDogs" Text="Tens {NumCats} gatos e cães"/>

		<Item Condition="NumCats == NumDogs-1" Text="Tens {NumCats} gatos e menos um cão"/>
		<Item Condition="NumCats GT NumDogs" Text="Tens {NumCats} gatos e {NumCats-NumDogs} menos cães"/>

		<Item Condition="NumDogs == NumCats-1" Text="Tens {NumDogs} cães e um menos cats"/>
		<Item Condition="NumDogs GT NumCats" Text="Tens {NumDogs} gatos e {NumDogs-NumCats} menos cães"/>

		<Item Condition="true" Text="Fallback text"/>
	</Record>

</LocalizationPack>